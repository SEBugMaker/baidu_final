<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather_back"
    tools:context="com.sunguyi.myapplication.WeatherPageActivity"
    >

    <Button
        android:id="@+id/back_home"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/jiantou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_area"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="通州区"
        android:gravity="bottom|center"
        android:textColor="#F31050"
        android:textSize="35dp"
        />

    <TextView
        android:id="@+id/textView_temperature"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="28°"
        android:textColor="#B12020"
        android:textSize="77dp"

        app:layout_constraintStart_toStartOf="@+id/textView_area"
        app:layout_constraintTop_toBottomOf="@+id/textView_area"
        />


    <!--recycle view实现-->


    <TextView
        android:id="@+id/textView3"
        android:layout_width="168dp"
        android:layout_height="105dp"
        android:layout_marginStart="92dp"
        android:gravity="center"
        android:text="晴朗\n最高35° 最低23°"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView_temperature"
        app:layout_constraintTop_toBottomOf="@+id/textView_area" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="2dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="0dp">



        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="2dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="24小时天气"
                android:textSize="20dp"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@xml/wt_box" />


        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/weather_part"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_area" />
</androidx.constraintlayout.widget.ConstraintLayout>